<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_metricValueInput"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:ems="5"
        android:gravity="center_vertical"
        android:hint="Value"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_metricMeasurementUnit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/metricValueSpace"
        app:layout_constraintStart_toEndOf="@id/et_metricValueInput"
        app:layout_constraintTop_toTopOf="@id/et_metricValueInput" />

    <Space
        android:id="@+id/metricValueSpace"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_metricMeasurementUnit"
        app:layout_constraintEnd_toEndOf="@id/tv_metricMeasurementUnit"
        app:layout_constraintStart_toStartOf="@id/tv_metricMeasurementUnit"
        app:layout_constraintTop_toBottomOf="@id/tv_metricMeasurementUnit" />
</androidx.constraintlayout.widget.ConstraintLayout>